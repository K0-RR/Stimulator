<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.sigmasd.nosleep</id>
  <name>No Sleep</name>
  <summary>
    Stops the desktop environment from sleeping.  
  </summary>
  <developer_name>Bedis Nbiba</developer_name>

  <metadata_license>CC0</metadata_license>
  <project_license>MIT</project_license>

  <description>
    <p>
    Stops the desktop environment from sleeping. (yes Should've been a shortcut in gnome)
    </p>
  </description>

  <launchable type="desktop-id">io.github.sigmasd.nosleep.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <caption>No Sleep ON screenshot</caption>
      <image>https://raw.githubusercontent.com/sigmaSd/nosleep/5fc642d3089ee0a67b8570d70dba0a17781a1ac9/assets/on.png</image>
    </screenshot>
    <screenshot type="default">
      <caption>No Sleep OFF screenshot</caption>
      <image>https://raw.githubusercontent.com/sigmaSd/nosleep/5fc642d3089ee0a67b8570d70dba0a17781a1ac9/assets/off.png</image>
    </screenshot>
  </screenshots>

  <url type="homepage">https://github.com/sigmaSd/gnome-nosleep</url>
  <url type="bugtracker">https://github.com/sigmaSd/gnome-nosleep/issues</url>

  <content_rating type="oars-1.1" />

  <releases>
    <release version="0.3.1" date="2023-12-11">
      <description>
        <ul>
          <li>Update deps (fixes a rare crash)</li>
          <li>Handle Ctrlc</li>
        </ul>
      </description>
    </release>
    <release version="0.3.0" date="2023-12-05">
      <description>
        <ul>
          <li>Switch to Gtk Inhibit api that works across DEs</li>
        </ul>
      </description>
    </release>
    <release version="0.2.0" date="2023-11-29">
      <description>
        <ul>
          <li>Initial Release</li>
        </ul>
      </description>
    </release>
  </releases>

  <keywords>
    <keyword>caffeine</keyword>
    <keyword>sleep</keyword>
    <keyword>power</keyword>
    <keyword>inhibit</keyword>
  </keywords>

  <categories>
    <category>Utility</category>
  </categories>
  
  <provides>
    <binary>nosleep</binary>
  </provides>
</component>
